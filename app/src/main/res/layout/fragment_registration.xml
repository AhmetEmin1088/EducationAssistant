<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEEEE"
    tools:context=".RegistrationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Hoşgeldiniz!"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sloganText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="EduSpark'a Kayıt Ol, Eğitimdeki Kıvılcımı Yakala!"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/firstNameText"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#FFFFFFFF"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Adınız :"
            android:inputType="text"
            android:paddingStart="5dp" />

        <EditText
            android:id="@+id/lastNameText"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#FFFFFFFF"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Soyadınız :"
            android:inputType="text"
            android:paddingStart="5dp" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#FFFFFFFF"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Email Adresiniz :"
            android:inputType="textEmailAddress"
            android:paddingStart="5dp" />

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#FFFFFFFF"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Parolanız :"
            android:inputType="textPassword"
            android:paddingStart="5dp" />

        <EditText
            android:id="@+id/passwordAgainText"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#FFFFFFFF"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Parolanız Tekrar :"
            android:inputType="textPassword"
            android:paddingStart="5dp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#336CFF"
            android:fontFamily="@font/poppins_bold"
            android:text="Kayıt Ol"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/informText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Zaten bir hesabınız var mı?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/logInTextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Giriş Yapın."
                android:textColor="#266CA1"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>